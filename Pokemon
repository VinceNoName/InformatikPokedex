public class Pokemon {
    private int Spd;
    private int Atk;
    private int SpAtk;
    private int SpDef;
    private int Def;
    private int Type1;
    private int Type2;
    private boolean SecType;
    public Pokemon (String n, int s,int a, int sa, int sd, int d, int t1, int t2, boolean st){
        String Name = n;
        int Spd = s;    //Speed
        int Atk = a;    //Attack
        int SpAtk = sa; //specialAttack
        int SpDef = sd;//specialDefense
        int Def = d;    //Dfense
        int Type1 = t1; //First Type
        int Type2 = t2; //Second Type
        boolean SecType = st;   //is there a second type
    }

    public String giveType (int t){
        String [] Type = {"Normal", "Fire", "Water", "Grass", "Electric", "Ice", "Fighting", "Poison", "Ground", "Flying", "Psychic", "Bug", "Rock", "Ghost", "Dragon", "Dark", "Seel", "Fairy"}
        return Type [t];
    }

}
