package pokedexSystem;

import java.awt.*;
import javax.swing.*;
import java.util.stream.IntStream;

public class UserInterface {
	private static POKEDEX PDex;

	public UserInterface(POKEDEX dex){
		PDex = dex;
		Frame();
	}
	
	private static String[] NumberList() {
		int intAry[] = IntStream.range(1,152).toArray();
        String[] strArray = new String[intAry.length];
        
        for (int i = 0; i < intAry.length; i++) {
            strArray[i] = String.valueOf(intAry[i]);
        }
        return strArray;
	}
	
	private static String[] AttributeList(String a, Pokemon[] ary) {
		String AtrList[] = new String[150];
		
		switch(a) {
		case "Name":
			for(int i = 0; i < 151; i++) {
				AtrList[i] = ary[i].giveName();
			}
		case "HP":
			for(int i = 0; i < 151; i++) {
				AtrList[i] = Integer.toString(ary[i].giveStat(0));
			}
		case "ATK":
			for(int i = 0; i < 151; i++) {
				AtrList[i] = Integer.toString(ary[i].giveStat(1));
			}
		case "DEF":
			for(int i = 0; i < 151; i++) {
				AtrList[i] = Integer.toString(ary[i].giveStat(2));
			}
		case "SP-ATK":
			for(int i = 0; i < 151; i++) {
				AtrList[i] = Integer.toString(ary[i].giveStat(3));
			}
		case "SP-DEF":
			for(int i = 0; i < 151; i++) {
				AtrList[i] = Integer.toString(ary[i].giveStat(4));
			}
		case "SPD":
			for(int i = 0; i < 151; i++) {
				AtrList[i] = Integer.toString(ary[i].giveStat(5));
			}
		}
		return AtrList;
	}
	
