public class NODE {
    private NODE next;
    private int Number;
    private Pokemon Poke;
    
    public NODE (NODE nex, Pokemon Pok){
        next = nex;
        Poke = Pok;
        Number = Pok.giveID();
    }

    public NODE AddPokemon (int i, String n, int hp, int a, int d, int sa, int sd, int s, int t1, int t2, boolean st) { 
        if(Number < i && next.Number > i){
            NODE tempnext = next;
            Pokemon Pke = new Pokemon(i, n, a, d, sa, sd, s, t1, t2, st);
            next = new NODE(tempnext, Pke);
        }
        else {
            next.AddPokemon(i, n, a, d, sa, sd, s, t1, t2, st);
        }
    }

    public Pokemon PokemonGeben() {
        return Poke;
    }

    public int countPokemon (){
        return next.countPokemon()+1;
    }

    public NODE giveNext(){
        return next;
    }

    public int giveNr(){
        return Number;
    }

}
