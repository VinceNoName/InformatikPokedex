package pokedexSystem;
public class NODE {
    private NODE next;
    private Pokemon Poke;
    
    public NODE (NODE nex, Pokemon Pok){        //geht die Knoten durch, welche die Daten enthalten
        next = nex;
        Poke = Pok;
    }

    public void AddPokemon (int i, String n, int hp, int a, int d, int sa, int sd, int s, int t1, int t2, boolean st) { //besorgt sich die Attribute der Pokemon
    	if(next == null) {
    		NODE tempnext = next;
            Pokemon Pke = new Pokemon(i, n, hp, a, d, sa, sd, s, t1, t2, st);
            next = new NODE(tempnext, Pke);
            System.out.println(Pke.giveName());
    	}
    	else {
    		next.AddPokemon(i, n, hp, a, d, sa, sd, s, t1, t2, st);
    	}
    }

    public Pokemon PokemonGeben() {
        return Poke;
    }

    public NODE giveNext(){
        return next;
    }
    
    public void setNext(NODE n) {
    	next = n;
    }

    public int giveNr(){
        return Poke.giveID();
    }

    public Pokemon findPoke(int id){        //Sucht Nach einem bestimmten Pokemon nach Pokedex nummer
        if(giveNr() == id) {
            return Poke;
        }
        else {
            return next.findPoke(id);
        }
    }
    
    public void printAll() {                    //gibt alle Pokemon-Namen aus (Debug methode)
    	System.out.println(Poke.giveName());
    	if(next != null) {
    		next.printAll();
    	}
    }
    
    public Pokemon ArrayFill(int j, Pokemon[] pka) {        //f√ºgt die Pokemon in ein Array ein
    	if(next != null && j <= 151) {
    		j+=1;
    		pka[j] = next.ArrayFill(j, pka);
    		return Poke;
    	}
    	else {
    		return Poke;
    	}
    }
}
